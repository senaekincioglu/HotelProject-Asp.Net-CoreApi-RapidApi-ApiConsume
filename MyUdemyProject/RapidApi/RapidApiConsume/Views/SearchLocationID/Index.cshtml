@model List<BookingApiLocationSearchViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /> 
   @* aynı sayfa içerisinde hem post hem listeleme yapılacağı için beginform kullanılabilir mvc ye özgü.*@
    @using(Html.BeginForm("Index","SearchLocationID",FormMethod.Post))
    {
        //post olacağına göre burda bir buton olması lazım
        <label>Şehir Adını Giriniz</label>
        <input type="text" class="form-control" name="cityName" />
   <br />
   <button class="btn btn-primary">Şehir için ID Bul</button>
    }
    <table class="table table-bordered">
        <tr>        
            <th>Lokasyon</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
          
            </tr>
        }

    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-dark">Yeni Otel Rezervasyon Bilgisi</a>
</div>